<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.jama.carouselview.CarouselView
            android:id="@+id/cv_home_festival_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:setAutoPlay="true"
            app:setAutoPlayDelay="1000"
            app:resource="@layout/item_home_banner"
            android:padding="10dp"/>

        <com.jama.carouselview.CarouselView
            android:id="@+id/cv_home_user_based_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:resource="@layout/item_home_user_based_content"
            tools:item="@tools:item_home_user_based_content"/>
    </LinearLayout>
</ScrollView>
